// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Profile {
  id          String   @id @default(cuid())
  updated_at  DateTime?
  username    String?
  full_name   String?
  avatar_url  String?
  website     String?

  @@map("profiles")
}

model BlogPost {
  id          String   @id @default(cuid())
  title       String
  content     String
  preview     String?
  created_on  DateTime @default(now())
  user_id     String?
  user_email  String?

  @@map("blog_post")
}

model Post {
  id          String   @id @default(cuid())
  title       String
  content     String
  created_on  DateTime @default(now())
  user_id     String?
  user_email  String?

  @@map("posts")
}

model BlogProject {
  id          String   @id @default(cuid())
  title       String
  description String?
  url         String?
  image_url   String?
  created_on  DateTime @default(now())

  @@map("blog_project")
}

model BlogBook {
  id          String   @id @default(cuid())
  title       String
  author      String?
  description String?
  image_url   String?
  created_on  DateTime @default(now())

  @@map("blog_book")
}

model Hackathon {
  id          String   @id @default(cuid())
  title       String
  description String?
  url         String?
  image_url   String?
  created_on  DateTime @default(now())

  @@map("hackathons")
}

model Avatar {
  id          String   @id @default(cuid())
  user_id     String
  image_url   String
  created_on  DateTime @default(now())

  @@map("avatars")
}
